		</antcall>
		<antcall target="stop-jboss-3"/>
	</target>
	
	<target name="jboss4">
		<antcall target="start-jboss-4"/>
		<antcall target="test-sampler">
			<param name="server-name" value="jboss-4.2.3" />
		</antcall>
		<antcall target="stop-jboss-4"/>
	</target>
	
	<target name="jboss5">
		<antcall target="start-jboss-5"/>
